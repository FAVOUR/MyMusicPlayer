<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/oneStarImgV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/fiveStarImgV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fourStarImgV"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/star_line_black" />

    <ImageView
        android:id="@+id/twoStarImgV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/fourStarImgV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/star_line_black" />

    <ImageView
        android:id="@+id/threeStarImgV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fiveStarImgV"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/star_line_black" />

    <ImageView
        android:id="@+id/fourStarImgV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/oneStarImgV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/twoStarImgV"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/star_line_black" />

    <ImageView
        android:id="@+id/fiveStarImgV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/threeStarImgV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/oneStarImgV"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/star_line_black" />

</androidx.constraintlayout.widget.ConstraintLayout>